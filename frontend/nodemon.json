{
  "watch": [
    "src/**/*",
    "public/**/*",
    "package.json"
  ],
  "ext": "js,jsx,ts,tsx,json,css,scss,html",
  "ignore": [
    "node_modules/**/*",
    "build/**/*",
    ".git/**/*",
    "coverage/**/*"
  ],
  "delay": 500,
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true
}